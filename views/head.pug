doctype html
html(lang='pl')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, viewport-fit=cover')
    meta(name='description' content='Odliczanie czas do matury. Dowiedz się ile miesięcy, dni, godzin, minut zostało do egzaminu maturalnego, oraz kiedy się odbędzie.')
    meta(name='keywords' content='dni do matury, matura, egzamin maturalny, odliczanie, miesiące, dni, godziny, minuty, timer, countdown')
    meta(name='language' content='PL')
    meta(name='author' content='Maciej Błędkowski')
    meta(property='og:type' content='website')
    meta(property='og:image' content='/img/thumbnail.jpg')
    meta(property='og:site_name' content='dni do matury')
    link(rel='stylesheet', href='/css/main.css')
    link(rel='stylesheet', media='(max-width: 320px)', href='/css/320andless.css')
    link(href="https://fonts.googleapis.com/css?family=Montserrat:500,700,900&display=swap&subset=latin-ext", rel="stylesheet")
    link(rel="apple-touch-icon", sizes="180x180", href="/apple-touch-icon.png")
    link(rel="icon", type="image/png", sizes="32x32", href="/favicon-32x32.png")
    link(rel="icon", type="image/png", sizes="16x16", href="/favicon-16x16.png")
    link(rel="manifest", href="/site.webmanifest")
    link(rel="mask-icon", href="/safari-pinned-tab.svg", color="#000")
    meta(name="msapplication-TileColor", content="#ffef32")
    meta(name="theme-color", content="#fff")
    script
      | let mainUnitType = #{unit}; let choosenYear = #{year};
  body
    block content
